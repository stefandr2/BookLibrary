@page "/borrowers"
@rendermode InteractiveServer
@inject LibraryApiClient Api

<PageTitle>Borrowers</PageTitle>

<h1>Borrowers</h1>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="row">
    <div class="col-lg-7">
        <h3 class="mt-3">Borrowers list</h3>
        @if (borrowers.Count == 0)
        {
            <p><em>No borrowers found.</em></p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var borrower in borrowers)
                {
                    <tr>
                        <td>@borrower.Name</td>
                        <td>@borrower.Email</td>
                        <td>@borrower.Mobile</td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
    <div class="col-lg-5">
        <h3 class="mt-3">Add borrower</h3>
        <EditForm Model="newBorrower" OnValidSubmit="AddBorrower">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Name</label>
                <InputText class="form-control" @bind-Value="newBorrower.Name" />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText class="form-control" @bind-Value="newBorrower.Email" />
            </div>
            <div class="mb-3">
                <label class="form-label">Mobile</label>
                <InputText class="form-control" @bind-Value="newBorrower.Mobile" />
            </div>
            <button class="btn btn-primary" type="submit" disabled="@isSaving">Add</button>
        </EditForm>
    </div>
</div>

@code {
    private readonly List<Borrower> borrowers = new();
    private Borrower newBorrower = new();
    private bool isSaving;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadBorrowersAsync();
    }

    private async Task LoadBorrowersAsync()
    {
        errorMessage = null;
        var result = await Api.GetBorrowersAsync();
        borrowers.Clear();
        if (result.IsSuccess && result.Data is not null)
        {
            borrowers.AddRange(result.Data);
        }
        else
        {
            errorMessage = result.Error;
        }
    }

    private async Task AddBorrower()
    {
        isSaving = true;
        errorMessage = null;

        var result = await Api.AddBorrowerAsync(newBorrower);
        if (result.IsSuccess)
        {
            newBorrower = new Borrower();
            await LoadBorrowersAsync();
        }
        else
        {
            errorMessage = result.Error;
        }

        isSaving = false;
    }
}
